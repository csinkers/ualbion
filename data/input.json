{
  // Global key-bindings that are active in every game mode / scene
  "Global": {
    "Tilde": "debug_flag toggle ShowConsole",
    "Alt+F4": "quit",
    "Alt+Enter":  "e:toggle_fullscreen",
    "V": "push_mouse_mode DebugPick",
    "Shift+V": "hide_debug_window",
    "F10": "update 1",
    "F11": "start_clock",
    "F12": "stop_clock",
    "Control+A": "!loadnextmap",
    "Control+X": "!loadprevmap",
    "Control+D": "engine_flag toggle RenderDepth",
    "Control+E": "push_scene Editor",
    "Control+B": "engine_flag toggle ShowBoundingBoxes",
    "Control+R": "e:run_renderdoc",
    "Control+V": "engine_flag toggle VSync",
    "Pause": "e:run_renderdoc",

    "Alt+1": "set_language English",
    "Alt+2": "set_language German",
    "Alt+3": "set_language French",
    "Alt+F2":  "load_map_prompt",

    "Space": "dismiss_message",
    "Period": "dismiss_message" 
  },
  "World2D": {
    "Escape": "push_scene MainMenu",
    "BracketLeft": "e:mag -1",
    "BracketRight": "e:mag 1",
    "Shift+BracketLeft": "toggle_underlay",
    "Shift+BracketRight": "toggle_overlay",
    "C": "noclip",

    "W": "+camera_move  0 -8",
    "A": "+camera_move -8  0",
    "S": "+camera_move  0  8",
    "D": "+camera_move  8  0",

    "Shift+W": "+camera_move  0 -16",
    "Shift+A": "+camera_move -16  0",
    "Shift+S": "+camera_move  0  16",
    "Shift+D": "+camera_move  16  0",

    "Up": "+party_move  0 -1",
    "Down": "+party_move  0  1",
    "Left": "+party_move -1  0",
    "Right": "+party_move  1  0",

    "Tab": "inv:open Tom",
    "F1": "inv:open_pos 0",
    "F2": "inv:open_pos 1",
    "F3": "inv:open_pos 2",
    "F4": "inv:open_pos 3",
    "F5": "inv:open_pos 4",
    "F6": "inv:open_pos 5",

    "Control+Number1": "set_active_member 0",
    "Control+Number2": "set_active_member 1",
    "Control+Number3": "set_active_member 2",
    "Control+Number4": "set_active_member 3",
    "Control+Number5": "set_active_member 4",
    "Control+Number6": "set_active_member 5",

    "Q": "cursor_mode look",
    "E": "cursor_mode manipulate",
    "R": "cursor_mode talk",
    "Z": "cursor_mode take"
  },
  "World3D": {
    "Escape": "push_scene MainMenu",
    "Tab": "push_scene inventory",
    "Control+Q": "engine_flag toggle UseCylindricalBillboards",

    "Control+Number1": "set_active_member 0",
    "Control+Number2": "set_active_member 1",
    "Control+Number3": "set_active_member 2",
    "Control+Number4": "set_active_member 3",
    "Control+Number5": "set_active_member 4",
    "Control+Number6": "set_active_member 5",

    "M": "open_map",
    "T": "wait",
    "Control+Shift+M": "set_mouse_mode MouseLook",
    "Control+Shift+N": "set_mouse_mode Normal",

    "W": "+camera_move  0 -4",
    "A": "+camera_move -4  0",
    "S": "+camera_move  0  4",
    "D": "+camera_move  4  0",

    "Shift+W": "+camera_move  0 -8",
    "Shift+A": "+camera_move -8  0",
    "Shift+S": "+camera_move  0  8",
    "Shift+D": "+camera_move  8  0"
  },
  "Inventory": {
    "Control+A": "inv_take_all",
    "Escape": "button_press Inventory.Exit"
  },
  "Conversation": {
    "Number1": "respond 1",
    "Number2": "respond 2",
    "Number3": "respond 3",
    "Number4": "respond 4",
    "Number5": "respond 5",
    "Number6": "respond 6",
    "Number7": "respond 7"
  },
  "MainMenu": {
    "Control+N": "new_game 300 32 75",
    "Control+3": "new_game 110 20 20",
    "Control+Shift+N": "new_game 300 32 75",
    "Escape": "close_dialog"
  },
  "Editor": {
    "Control+E":  "pop_scene Editor"
  }
}
