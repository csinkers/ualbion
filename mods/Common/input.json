{
  // Global key-bindings that are active in every game mode / scene
  "Global": {
    "Alt+F4": "quit",
    "Alt+Enter": "e:toggle_fullscreen",
    "Ctrl+M": "mute",

    "Alt+1": "set_language English",
    "Alt+2": "set_language German",
    "Alt+3": "set_language French",
    "Alt+F2": "load_map_prompt",

    "Space": "dismiss_message",
    "Period": "dismiss_message",

    // Debugging
    "Tilde": "focus_console",
    "Ctrl+Shift+V": "push_mouse_mode DebugPick",
    "Shift+V": "hide_debug_window",
    "Ctrl+D": "engine_flag toggle RenderDepth",
    "Ctrl+E": "push_scene Editor",
    "Ctrl+B": "engine_flag toggle ShowBoundingBoxes",
    "Ctrl+Shift+L": "engine_flag toggle SuppressLayout",
    "Ctrl+L": "eng:layout",
    "Ctrl+R": "e:run_renderdoc",
    "Ctrl+V": "engine_flag toggle VSync",
    "Pause": "e:run_renderdoc",
    "F1": "toggle_diagnostics",
    "F2": "toggle_clock",
    "F3": "update 1",
    "F5": "debug_run",
    "F9": "debug_break",
    "F10": "debug_step"
  },
  "World2D": {
    "Escape": "push_scene MainMenu",
    "Ctrl+A": "!loadnextmap",
    "Ctrl+X": "!loadprevmap",
    "Ctrl+Q": "debug_flag toggle FastMovement",
    "LeftBracket": "e:mag -1",
    "RightBracket": "e:mag 1",
    "Shift+LeftBracket": "toggle_underlay",
    "Shift+RightBracket": "toggle_overlay",
    "C": "noclip",

    "W": "+party_move  0 -1",
    "S": "+party_move  0  1",
    "A": "+party_move -1  0",
    "D": "+party_move  1  0",

    "Shift+W": "+party_move  0 -1",
    "Shift+S": "+party_move  0  1",
    "Shift+A": "+party_move -1  0",
    "Shift+D": "+party_move  1  0",

    "Up": "+party_move  0 -1",
    "Down": "+party_move  0  1",
    "Left": "+party_move -1  0",
    "Right": "+party_move  1  0",

    "Tab": "inv:open Tom",
    /*"F1": "inv:open_pos 0",
    "F2": "inv:open_pos 1",
    "F3": "inv:open_pos 2",
    "F4": "inv:open_pos 3",
    "F5": "inv:open_pos 4",
    "F6": "inv:open_pos 5",*/

    "Ctrl+1": "debug_flag toggle CollisionLayer",
    "Ctrl+2": "debug_flag toggle SitLayer",
    "Ctrl+3": "debug_flag toggle MiscLayer",
    "Ctrl+4": "debug_flag toggle ShowDebugTiles",
    "Ctrl+5": "debug_flag toggle ZoneLayer",
    "Ctrl+6": "debug_flag toggle NpcColliderLayer",
    "Ctrl+7": "debug_flag toggle NpcPathLayer",

    "Q": "+cursor_mode examine",
    "E": "+cursor_mode manipulate",
    "R": "+cursor_mode talk",
    "Z": "+cursor_mode take"
  },
  "World3D": {
    "Escape": "push_scene MainMenu",
    "Tab": "inv:open Tom",
    /*"F1": "inv:open_pos 0",
    "F2": "inv:open_pos 1",
    "F3": "inv:open_pos 2",
    "F4": "inv:open_pos 3",
    "F5": "inv:open_pos 4",
    "F6": "inv:open_pos 5",*/

    "Ctrl+A": "!loadnextmap",
    "Ctrl+X": "!loadprevmap",

    "M": "open_map",
    "T": "wait",
    "Ctrl+Shift+M": "set_mouse_mode MouseLook",
    "Ctrl+Shift+N": "set_mouse_mode Normal",

    "W": "+camera_move  0 -4",
    "A": "+camera_move -4  0",
    "S": "+camera_move  0  4",
    "D": "+camera_move  4  0",

    "Up": "+cam_rotate 0 0.03",
    "Down": "+cam_rotate 0 -0.03",
    "Left": "+cam_rotate 0.03 0",
    "Right": "+cam_rotate -0.03 0",

    "Shift+W": "+camera_move  0 -8",
    "Shift+A": "+camera_move -8  0",
    "Shift+S": "+camera_move  0  8",
    "Shift+D": "+camera_move  8  0",

    "F": "toggle_mlook",
    "Q": "+cursor_mode examine",
    "E": "+cursor_mode manipulate",
    "R": "+cursor_mode talk",
    "Z": "+cursor_mode take"
  },
  "Inventory": {
    "Ctrl+A": "take_all",
    "E": "inv:equip",
    "Escape": "inv:close",
    "Tab": "inv:close",
    /*"F1": "inv:open_pos 0",
    "F2": "inv:open_pos 1",
    "F3": "inv:open_pos 2",
    "F4": "inv:open_pos 3",
    "F5": "inv:open_pos 4",
    "F6": "inv:open_pos 5",*/
    "Ctrl+1": "inv:set_page Summary",
    "Ctrl+2": "inv:set_page Stats",
    "Ctrl+3": "inv:set_page Misc"
  },
  "Combat": {
    "Escape": "push_scene MainMenu"
  },
  "Conversation": {
    "1": "respond 1",
    "2": "respond 2",
    "3": "respond 3",
    "4": "respond 4",
    "5": "respond 5",
    "6": "respond 6",
    "7": "respond 7",
    "8": "respond 8",
    "9": "respond 9",
    "0": "enter_word" // Used to trigger 'Enter word' in conversation
  },
  "MainMenu": {
    "Ctrl+N": "new_game TorontoBegin 32 76",
    "Ctrl+3": "new_game Jirinaar 20 20",
    "Ctrl+Shift+N": "new_game TorontoBegin 32 76",
    "Escape": "close_window"
  },
  "Editor": {
    "Ctrl+E": "pop_scene Editor"
  },
  "IsoBake": {
    "W": "+cam_move 0 50",
    "A": "+cam_move -50 0",
    "S": "+cam_move 0 -50",
    "D": "+cam_move 50 0",
    "Q": "+cam_move 0 0 -10",
    "F": "+cam_move 0 0 10",

    "Ctrl+A": "iso_lab 1",
    "Ctrl+X": "iso_lab -1",
    "Ctrl+Z": "iso_pal -1",
    "Ctrl+C": "iso_pal 1",
    "1": "iso_mode Floors",
    "2": "iso_mode Ceilings",
    "3": "iso_mode Walls",
    "4": "iso_mode Contents",

    "Shift+W": "+cam_move 0 150",
    "Shift+A": "+cam_move -150 0",
    "Shift+S": "+cam_move 0 -150",
    "Shift+D": "+cam_move 150 0",
    "Shift+Q": "+cam_move 0 0 -50",
    "Shift+F": "+cam_move 0 0 50",

    "Comma": "iso_row_width -1",
    "Period": "iso_row_width 1",
    "Slash": "+slow_clock 1",

    "I": "+iso_height 1",
    "J": "+iso_width -1",
    "K": "+iso_height -1",
    "L": "+iso_width 1",

    "Up": "+iso_pitch -1",
    "Down": "+iso_pitch 1",
    "Left": "+iso_yaw -1",
    "Right": "+iso_yaw 1",

    "LeftBracket": "e:mag -1",
    "RightBracket": "e:mag 1"
  }
}
